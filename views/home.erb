<!doctype html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Sheriff</title>
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Bree+Serif|Open+Sans">
    <link rel="stylesheet" href="stylesheets/bulma.css">
    <link rel="stylesheet" href="stylesheets/app.css">
</head>
<body>
    <div class="columns">
        <div class="column content">
            <div class="has-text-centered">
                <img src="/images/logo.png" alt="Sheriff" style="width: 20%">
            </div>

            <div class="columns mtl">
                <% FEATURES.each do |name, feature| %>
                    <div class="column">
                        <div class="card">
                            <div class="card-content content has-text-centered"><a href="/<%= name %>"><%= name %></a></div>
                        </div>
                    </div>
                <% end %>
            </div>
        </div>
    </div>

    <script src="javascripts/app.js"></script>
</body>
</html>
